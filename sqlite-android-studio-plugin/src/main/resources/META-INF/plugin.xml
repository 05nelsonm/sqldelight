<idea-plugin version="2">
  <id>com.alecstrong.sqlite.android</id>
  <name>Sqlite Android</name>
  <category>Custom Languages</category>
  <version>0.1</version>
  <vendor email="anstrong22@gmail.com" url="http://www.alecstrong.com">Alec Strong</vendor>
  <idea-version since-build="134.549"/>
  <depends>com.intellij.modules.lang</depends>

  <description><![CDATA[
      Android sqlite interface generator.<br>
      Generates interfaces for implementing sqlite tables, <br>
      Mapping from a cursor and creating ContentValues.
    ]]></description>

  <change-notes><![CDATA[
      Everythings new.
    ]]>
  </change-notes>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.alecstrong.sqlite.android.lang.SqliteFileTypeFactory"/>
    <externalAnnotator language="Sqlite"
        implementationClass="com.alecstrong.sqlite.android.generating.SqlDocumentAnnotator"/>

    <lang.syntaxHighlighterFactory key="SqliteSyntaxHighlighter"
        implementationClass="com.alecstrong.sqlite.android.lang.SqliteSyntaxHighlighterFactory"/>
    <lang.parserDefinition language="Sqlite"
        implementationClass="com.alecstrong.sqlite.android.lang.SqliteParserDefinition"/>
    <lang.ast.factory language='Sqlite'
        implementationClass="com.alecstrong.sqlite.android.lang.SqliteASTFactory"/>
  </extensions>
</idea-plugin>